import { type GetHandler, defineSchema } from '@rhinolabs/boilr';
import { z } from 'zod';

export const schema = defineSchema({
  get: {
    response: {
      200: z.object({
        message: z.string(),
        version: z.string(),
      }),
    },
  },
});

export const get: GetHandler<typeof schema> = async (request, reply) => {
  return {
    message: 'Welcome to Boilr API',
    version: '1.0.0',
  };
};
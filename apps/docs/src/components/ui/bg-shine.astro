---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`top-0 left-0 right-0 absolute blur-xl lg:blur-3xl  ${className}`}>
  <div
    class="absolute top-0 left-0 w-full h-full bg-linear-65 from-30% lg:from-15% opacity-10 via-35% lg:via-20% to-40% lg:to-25% from-transparent via-white to-transparent"
    style="background-size: 200% 200%;"
  >
  </div>
  <div
    class="absolute top-0 left-0 w-full h-full bg-linear-65 from-45% lg:from-30% opacity-10 via-50% lg:via-35% to-55% lg:to-40% from-transparent via-white to-transparent"
    style="background-size: 200% 200%;"
  >
  </div>
</div>
